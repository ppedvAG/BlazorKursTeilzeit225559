@page "/kunden"
@using Models
@inject NorthwindContext db
<h3>Kunden</h3>


    <input class="form-control" @bind-value="filter" @bind-value:event="oninput" />

<div class="list-group">

        @foreach (var item in db.Customers.Where(x => x.CompanyName.Contains(filter)))
        {
            <a href="./Modul5/kunden/@item.CustomerId/edit" class="list-group-item">@item.CompanyName</a>
        }


</div>
@code {
   
    string filter = "";
  
}
