@page "/person/{id:int?}"
<h3>Person</h3>
<EditForm EditContext="_ctx" OnSubmit="save">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="mb-3 row">
        <label  class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <InputText class="form-control" @bind-Value="_person.Name"></InputText>
            <ValidationMessage For="()=>_person.Name"></ValidationMessage>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <InputTextOnchange class="form-control" @bind-Value="_person.Name"></InputTextOnchange>
            <ValidationMessage For="()=>_person.Name"></ValidationMessage>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Gross</label>
        <div class="col-sm-10">
            <InputNumber class="form-control" @bind-Value="_person.Gross"></InputNumber>
            <ValidationMessage For="()=>_person.Gross"></ValidationMessage>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Geb Datum</label>
        <div class="col-sm-10">
            <InputDate class="form-control" hannes="super" @bind-Value="_person.GebDat"></InputDate>
            <ValidationMessage For="()=>_person.GebDat"></ValidationMessage>
        </div>
    </div>

    <button type="submit" class="btn btn-outline-danger">save </button>
    <ValidationSummary></ValidationSummary>
</EditForm>

@code {
    [Parameter]
    public int id { get; set; }
    Person _person = new Person();

    EditContext _ctx;

    protected override void OnInitialized()
    {
        _ctx = new EditContext(_person);
        _ctx.SetFieldCssClassProvider(new BoostrapFixFieldCSSClassProvider());

    }
    void save(EditContext ctx)
    {
        

    }
}
